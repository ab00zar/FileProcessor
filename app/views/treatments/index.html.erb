<div class="row" style="margin-top: 50px;">
  <div class="col-sm-8 offset-sm-2">
    <div class="card card-primary">
      <h4 class="card-header">List of Treatments created by <%= current_user.email %></h4>
      <div class="card-body">
        <p id="notice"><%= notice %></p>
        <table class="table">
          <thead>
            <tr>
              <th>File1</th>
              <th>File2</th>
              <th>Result</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @treatments.each do |treatment| %>
              <tr>
                <td><%= link_to "Download", treatment.file1.url(:original, false), { target: '_blank' } %></td>
                <td><%= link_to "Download", treatment.file2.url(:original, false), { target: '_blank' } %></td>
                <td><%= link_to "Download", '/' + treatment.id.to_s, { target: '_blank' } %></td>
                <td><%= link_to 'Show', treatment %></td>
                <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
                <td><%= link_to 'Destroy', treatment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Treatment', new_treatment_path %>
        <br><br>
        <%= link_to 'Sign Out', root_path + "users/sign_out" %>
      </div>
    </div>
  </div>
</div>
