<p id="notice"><%= notice %></p>

<h1>Treatments</h1>

<table>
  <thead>
    <tr>
      <th>File1</th>
      <th>File2</th>
      <th>Result</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treatments.each do |treatment| %>
      <tr>
        <td><%= link_to "Download", treatment.file1.url(:original, false) %></td>
        <td><%= link_to "Download", treatment.file2.url(:original, false) %></td>
        <td><%= link_to "Download", treatment.result.url(:original, false) %></td>
        <td><%= treatment.created_by %></td>
        <td><%= link_to 'Show', treatment %></td>
        <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
        <td><%= link_to 'Destroy', treatment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

